{
  "manifest_version": 2,
  "name": "Sheety Data Extension",
  "version": "1.0",
  "description": "View the latest data from Google Sheets via Sheety.",
  "permissions": [
    "https://spreadsheets.google.com/*",
    "https://api.sheety.co/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_security_policy": "script-src 'self' https://api.sheety.co; object-src 'self'"
}
