{
    "manifest_version": 2,
    "name": "Sheety Update Extension",
    "version": "1.0",
    "description": "Update details from Google Sheets via Sheety.",
    "permissions": [
      "https://spreadsheets.google.com/*",
      "https://api.sheety.co/*"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "content_security_policy": "script-src 'self' https://api.sheety.co; object-src 'self'",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "web_accessible_resources": [
      "images/*"
    ]
  }
  